<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center reg-top">
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Get access to community and contact info. <br /> $10/m only!</p>
        <% else %>
          <h1>Basic Account</h1>
          <p>Get basic access to community. <br /> Free.</p>
        <% end %>
      </div>
      
      <div class="well">
        <h2 class="text-center">Sign up</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>